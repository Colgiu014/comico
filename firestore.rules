rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Comics collection - open access for unauthenticated users (development mode)
    // TODO: Add proper security rules for production
    match /comics/{comicId} {
      allow read, write: if true;
    }
    
    // Orders collection - open access for unauthenticated users (development mode)
    // TODO: Add proper security rules for production
    match /orders/{orderId} {
      allow read, write: if true;
    }
    
    // Users collection (if needed) - open access (development mode)
    // TODO: Add proper security rules for production
    match /users/{userId} {
      allow read, write: if true;
    }
  }
}
